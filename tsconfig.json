{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "typeRoots": ["src/types", "node_modules/@types"],
    "declaration": true,
    "outDir": "dist/esm",
    "paths": {
      "@felixcolaci/auth0-testing/types": ["./src/types"],
      "@felixcolaci/auth0-testing/types/events": ["./src/types/Event/types"],
      "@felixcolaci/auth0-testing/types/apis": ["./src/types/API/types"]
    }
  },
  "include": ["./src"]
}
