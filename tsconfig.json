{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    //"typeRoots": ["src/definitions", "node_modules/@types"],
    "declaration": true,
    "outDir": "dist/esm",
    "baseUrl": "./src",
    "paths": {
      "@felixcolaci/auth0-testing/types": ["types"],
      "@felixcolaci/auth0-testing/types/events": ["types/Event/types"],
      "@felixcolaci/auth0-testing/types/apis": ["types/API/types"]
    }
  },
  "include": ["./src"]
}
